---
import Seo from "~/components/Seo.astro";

interface Props {
  title?: string;
  image?: string;
  url?: string;
  bodyClass?: string;
}

const { title, image, url, bodyClass } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Seo
      title={title}
      description={`${title} | Frontend Mentor Challenge`}
      image={image}
      url={url}
    />
    <slot name="header" />
  </head>
  <body class={bodyClass}>
    <slot />
  </body>
</html>
