---
interface Props {
  title?: string;
  description?: string;
  image?: string;
  url?: string;
}

import { SEO } from "astro-seo";

const {
  title,
  description = "List of Challenge in frontendmentor.io that i've completed.",
  image = "/assets/cover.png",
  url = "",
} = Astro.props;
---

<SEO
  charset="UTF-8"
  title={title
    ? `${title} | Frontend Mentor Challenge`
    : "Frontend Mentor Challenge"}
  description={description}
  canonical={`https://fmc.vanirvan.my.id${url}`}
  noindex={false}
  nofollow={false}
  openGraph={{
    basic: {
      title: title
        ? `${title}  | Frontend Mentor Challenge`
        : "Frontend Mentor Challenge",
      type: "website",
      image: `https://fmc.vanirvan.my.id${image}`,
      url: `https://fmc.vanirvan.my.id${url}`,
    },
  }}
  twitter={{
    card: "summary_large_image",
    site: `https://fmc.vanirvan.my.id${url}`,
    creator: "Vanirvan",
    title: title
      ? `${title}  | Frontend Mentor Challenge`
      : "Frontend Mentor Challenge",
    image: `https://fmc.vanirvan.my.id${image}`,
    imageAlt: title,
    description,
  }}
  extend={{
    link: [
      // favicon start
      {
        rel: "apple-touch-icon",
        sizes: "57x57",
        href: "/favicon/apple-icon-57x57.png",
      },
      {
        rel: "apple-touch-icon",
        sizes: "60x60",
        href: "/favicon/apple-icon-60x60.png",
