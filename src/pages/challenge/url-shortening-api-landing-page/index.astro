---
import ProjectLayout from "~/components/layouts/ProjectLayout.astro";

const projectDir = "/challenge/url-shortening-api-landing-page";

import BgBoostDesktop from "~/assets/challenge/url-shortening-api-landing-page/bg-boost-desktop.svg";
import BgBoostMobile from "~/assets/challenge/url-shortening-api-landing-page/bg-boost-mobile.svg";

import IconMenu from "~/assets/challenge/url-shortening-api-landing-page/icon-menu.svg";
import IconBrandRecognition from "~/assets/challenge/url-shortening-api-landing-page/icon-brand-recognition.svg";
import IconDetailedRecords from "~/assets/challenge/url-shortening-api-landing-page/icon-detailed-records.svg";
import IconFacebook from "~/assets/challenge/url-shortening-api-landing-page/icon-facebook.svg";
import IconFullyCustomizable from "~/assets/challenge/url-shortening-api-landing-page/icon-fully-customizable.svg";
import IconInstagram from "~/assets/challenge/url-shortening-api-landing-page/icon-instagram.svg";
import IconPinterest from "~/assets/challenge/url-shortening-api-landing-page/icon-pinterest.svg";
import IconTwitter from "~/assets/challenge/url-shortening-api-landing-page/icon-twitter.svg";

import IllustrationWorking from "~/assets/challenge/url-shortening-api-landing-page/illustration-working.svg";

import Logo from "~/assets/challenge/url-shortening-api-landing-page/logo.svg";
import ShortenIt from "./shorten-it";

const navMenus = ["Features", "Pricing", "Resources"];
---

<ProjectLayout
  title="URL shortening API landing page"
  image={projectDir + "/cover.png"}
  url={projectDir}
>
  <main class="font-poppins relative w-full overflow-x-hidden">
    <nav class="w-full relative">
      <div
        class="max-w-5xl mx-auto w-full py-9 px-6 flex items-center justify-between"
      >
        <div class="flex items-center gap-12">
          <img src={Logo.src} alt="logo" class="w-full h-auto" />
          <div
            class="hidden md:flex items-center gap-6 text-[hsl(0,0%,75%)] font-bold text-sm"
          >
            {
              navMenus.map((menu) => (
                <a
                  href="#"
                  class="hover:text-[hsl(255,11%,22%)] transition-colors duration-200"
                >
                  {menu}
                </a>
              ))
            }
          </div>
        </div>
        <div class="hidden md:flex items-center gap-6 text-sm font-bold">
          <a
            href="#"
            class="text-[hsl(0,0%,75%)] hover:text-[hsl(255,11%,22%)] transition-colors duration-200"
            >Login</a
          >
          <a
            href="#"
            class="text-white bg-[hsl(180,66%,49%)] rounded-full px-6 py-3 hover:bg-[hsla(180,66%,49%,50%)] transition-colors duration-200"
            >Signup</a
          >
        </div>
        <div class="inline md:hidden">
          <img
            id="icon-menu"
            src={IconMenu.src}
            alt="menu"
            class="w-8 h-auto cursor-pointer"
          />
        </div>
      </div>

      <div
        id="mobile-navigation"
        class="absolute top-full opacity-0 -z-50 w-full px-3 transition-all duration-200 md:hidden"
      >
        <div
          class="rounded-md flex flex-col bg-[hsl(257,27%,26%)] px-6 py-9 items-center"
        >
          {
            navMenus.map((menu) => (
              <a
                href="#"
                class="font-bold text-white text-sm hover:bg-[hsl(255,11%,22%)] transition-colors duration-200 w-full text-center py-3 rounded-md"
              >
                {menu}
              </a>
            ))
          }
          <div
            id="mobile-navigation-separator"
            class="bg-[hsl(255,11%,22%)] w-full h-px my-3"
          >
          </div>
          <a
            href="#"
            class="font-bold text-white text-sm hover:bg-[hsl(255,11%,22%)] transition-colors duration-200 w-full text-center py-3 rounded-md"
            >Login</a
          >
          <a
            href="#"
            class="w-full px-6 py-3 text-center font-bold hover:bg-[hsla(180,66%,49%,50%)] text-white bg-[hsl(180,66%,49%)] rounded-full"
            >Signup</a
          >
        </div>
      </div>
    </nav>

    <section
      id="hero"
      class="relative max-w-5xl mx-auto w-full px-6 flex gap-6 flex-col md:flex-row items-center justify-between pb-36"
    >
      <div class="relative order-1 md:order-2">
        <img
          src={IllustrationWorking.src}
          alt="illustration"
          class="w-[150%] h-auto overflow-clip max-w-[unset] md:h-96 object-left-top"
        />
      </div>
      <!-- <div class="w-full h-full relative "></div> -->
      <div
        class="flex flex-col gap-4 items-center md:items-start order-2 md:order-1"
      >
        <h1
          class="font-bold text-[40px] text-center md:text-left md:text-7xl leading-tight md:leading-[1.15]"
        >
          More than just shorter links
        </h1>
        <h2
          class="text-[hsl(257,7%,63%)] font-medium text-center md:text-left md:font-medium md:text-lg w-11/12"
        >
          Build your brand's recognition and get detailed insights on how your
          links are performing.
        </h2>
        <a
          href="#"
          class="px-9 py-3 text-center font-bold hover:bg-[hsl(180,63%,74%)] text-white bg-[hsl(180,66%,49%)] rounded-full w-max mt-3 transition-colors duration-200"
          >Get Started</a
        >
      </div>
    </section>
    <ShortenIt client:load />

    <section id="statistic" class="relative w-full bg-[hsl(230,25%,95%)]">
      <div
        class="flex flex-col items-center gap-36 w-full max-w-5xl px-6 pt-16 pb-36 mx-auto"
      >
        <div class="flex flex-col gap-6 items-center">
          <h1
            class="font-bold text-3xl text-center md:text-left md:text-5xl tracking-tight"
          >
            Advanced Statistics
          </h1>
          <h2
            class="text-[hsl(257,7%,63%)] text-center text-lg max-w-xl md:text-xl"
          >
            Track how your links are performing across the web with our advanced
            statistics dashboard.
          </h2>
        </div>
        <div class="relative">
          <div
            id="background-divider"
            class="w-2 h-full md:h-2 md:w-full bg-[hsl(180,66%,49%)] absolute top-0 left-1/2 -translate-x-1/2 md:top-1/2 md:left-0 md:translate-x-0 md:-translate-y-1/2"
          >
          </div>
          <div
            class="grid grid-cols-1 md:grid-cols-3 gap-24 md:gap-9 md:flex-row items-center"
          >
            <div
              class="rounded-md flex flex-col gap-6 px-6 pt-20 pb-9 bg-white relative md:-translate-y-12"
            >
              <div
                class="absolute top-0 left-1/2 md:left-6 -translate-x-1/2 md:translate-x-0 -translate-y-1/2 size-20 flex items-center justify-center bg-[hsl(257,27%,26%)] rounded-full"
              >
                <img src={IconBrandRecognition.src} alt="icon" />
              </div>
              <h1 class="font-bold text-2xl text-center md:text-left">
                Brand Recognition
              </h1>
              <h2
                class="text-[hsl(257,7%,63%)] text-center md:text-left md:text-sm"
              >
                Boost your brand recognition with each click. Generic links
                don't mean a thing. Branded links help instill confidence in
                your content.
              </h2>
            </div>
            <div
              class="rounded-md flex flex-col gap-6 px-6 pt-20 pb-9 bg-white relative"
            >
              <div
                class="absolute top-0 left-1/2 md:left-6 -translate-x-1/2 md:translate-x-0 -translate-y-1/2 size-20 flex items-center justify-center bg-[hsl(257,27%,26%)] rounded-full"
              >
                <img src={IconDetailedRecords.src} alt="icon" />
              </div>
              <h1 class="font-bold text-2xl text-center md:text-left">
                Detailed Records
              </h1>
              <h2
                class="text-[hsl(257,7%,63%)] text-center md:text-left md:text-sm"
              >
                Gain insights into who is clicking your links. Knowing when and
                where poeple engage with your content helps inform better
                decisions.
              </h2>
            </div>
            <div
              class="rounded-md flex flex-col gap-6 px-6 pt-20 pb-9 bg-white relative md:translate-y-12"
            >
              <div
                class="absolute top-0 left-1/2 md:left-6 -translate-x-1/2 md:translate-x-0 -translate-y-1/2 size-20 flex items-center justify-center bg-[hsl(257,27%,26%)] rounded-full"
              >
                <img src={IconFullyCustomizable.src} alt="icon" />
              </div>
              <h1 class="font-bold text-2xl text-center md:text-left">
                Fully Customizable
              </h1>
              <h2
                class="text-[hsl(257,7%,63%)] text-center md:text-left md:text-sm"
              >
                Improve brand awareness and content discoverability through
                customizable links, supercharging audience engagement.
              </h2>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="boost" class="relative w-full bg-[hsl(257,27%,26%)] py-24">
      <div
        class="mx-auto w-max text-center flex flex-col gap-3 items-center px-6"
      >
        <h1 class="z-10 text-2xl font-bold text-white md:text-4xl">
          Boost your links today
        </h1>
        <a
          href="#"
          class="z-10 px-9 py-3 text-center font-bold hover:bg-[hsl(180,63%,74%)] text-white bg-[hsl(180,66%,49%)] rounded-full w-max mt-3 transition-colors duration-200"
          >Get Started</a
        >
      </div>
      <img
        src={BgBoostMobile.src}
        alt="boost-bg"
        class="w-full h-full absolute top-0 left-0 object-cover md:hidden"
      />
      <img
        src={BgBoostDesktop.src}
        alt="boost-bg"
        class="w-full h-full absolute top-0 left-0 object-cover hidden md:block"
      />
    </section>

    <section
      id="footer"
      class="relative w-full bg-[hsl(260,8%,14%)] text-white"
    >
      <div
        class="w-full max-w-5xl md:justify-between text-sm px-6 py-16 mx-auto flex flex-col gap-16 items-center md:flex-row md:items-start"
      >
        <!-- <img src={Logo.src} alt="logo" class="h-auto w-auto" /> -->
