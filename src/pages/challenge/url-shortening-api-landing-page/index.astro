<script>
  const mobileIconMenu = document.getElementById("icon-menu");

  mobileIconMenu?.addEventListener("click", () => {
    const mobileNavigation = document.getElementById("mobile-navigation");

    if (mobileNavigation?.classList.contains("opacity-0")) {
      mobileNavigation.classList.remove("opacity-0");
      mobileNavigation.classList.remove("-z-50");
      mobileNavigation.classList.add("opacity-100");
      mobileNavigation.classList.add("z-10");
      return;
    }

    if (mobileNavigation?.classList.contains("opacity-100")) {
      mobileNavigation.classList.remove("opacity-100");
      mobileNavigation.classList.remove("z-10");
      mobileNavigation.classList.add("opacity-0");
      mobileNavigation.classList.add("-z-50");
      return;
    }
  });
</script>

